page{
  background-color: #fffff8;
}
.container {
  width: 100%;
}
.container .title {
 display: flex;
  flex-direction: row;
  width: 100%;
}
.top {
  width: 60%;
  text-align: center;
  padding-left: 20%;
  margin-left: 5%;
  font-size: 24px;
}
.modify {
  width: 20%;
  margin-left: 10%;
  text-align: right;
  color: blue;
}
.container .line {
    width: 100%;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.container .line view {
  width: 100%;
  height: 1rpx;
  background: linear-gradient(to right,gray, gray);
}
.container .body {
  width: 100%;
}
.container .body .modifytext{
  width: 100%;
  text-align: center;
  font-size: small;
}
.container .body .msg {
  display: flex;
  width: 90%;
  padding-left: 5%;
}
.container .body .msg .text-left{
  width: 40%;
  text-align: left;
}
.container .body .msg .text-right{
  width: 60%;
  text-align: right;
}