.body {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-left: 5%;
  background-color: rgb(255, 255, 255);
  box-shadow: 0px 0px 2px 2px rgb(240,240,240);
  border-radius: 10px;
}
.body .body_title {
  margin-top: 10px;
  margin-left: 80px;
}
.body .body_title_text {
  margin-left: 20px;
  height: 40px;
  background-color: rgb(255, 245, 247);
  border-radius: 5px;
  padding-top: 5px;
  padding-left: 5px;
  margin-top: 10px;
}
.body .body_details_text {
  margin-top: 10px;
  margin-left: 30px;
}
.body .body_details {
  margin-left: 20px;
  height: 260px;
  background-color: rgb(255, 245, 247);
  border-radius: 5px;
  padding-top: 5px;
  padding-left: 5px;
  margin-top: 5px;
  margin-bottom: 15px;
}
.body .body_details_class {
  font-size: 14px;
}

.body .type_choose {
  width: 40%;
  margin-left: 20px;
  margin-top: 10px;
  padding-top: 8px;
  padding-bottom: 8px;
  text-align: center;
  background-color: rgb(240,240,240);
  border-radius: 8px;
}
.body .body_picture .body_picture_bd {
  margin-bottom: -8px;
  margin-right: -8px;
  overflow: hidden;
}

.body .body_picture .body_picture_bd .body_picture_files {
  list-style: none;
}

.uploader_file{
  float: left;
  margin-left: 20px;
  margin-right: 8px;
  margin-bottom: 8px;
  width: 80px;
  height: 80px;
  background: no-repeat 50%;
  background-size: cover;
  border-radius: 10px;
}

.uploader_img{
  display:block;
  width:100%;
  height:100%;
  border-radius: 10px;
}

.body .body_picture .body_picture_bd .body_picture_inputbox {
  float: left;
  position: relative;
  margin-left: 20px;
  margin-right: 8px;
  margin-bottom: 8px;
  width: 80px;
  height: 80px;
  box-sizing: border-box;
  background-color: #ededed;
  border-radius: 10px;
}

.body .body_picture .body_picture_bd .body_picture_inputbox .body_picture_input{
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

.body .body_picture .body_picture_bd .body_picture_inputbox:after, .body .body_picture .body_picture_bd .body_picture_inputbox:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  background-color: #a3a3a3;
}

.body .body_picture .body_picture_bd .body_picture_inputbox:before {
  width: 32px;
  height: 2px;
}
.body .body_picture .body_picture_bd .body_picture_inputbox:after {
  width: 2px;
  height: 32px;
}
.body .body_picture .add {
  font-size: 12px;
  font-weight: 600;
  margin-left: 10px;
}

.tag_end {
  display: flex;
  flex-direction: column;
  margin-top: 15px;
  margin-bottom: 25px;
}

.lost_and_found_office {
  font-size: 14px;
  width: 60%;
  text-align: center;
  margin-left: 30%;
  margin-bottom: 20px;
  background-color: bisque;
