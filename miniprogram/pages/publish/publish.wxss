.contacts {
  display: flex;
  flex-direction: row;
  width: 80%;
  margin-left: 15%;
  text-align: end;
  margin-bottom: 5px;
}

.contacts-title-name {
  margin-right: 16px;
}
.contact_method {
  display: flex;
  flex-direction: row;
  width: 80%;
  margin-left: 15%;
  text-align: end;
  margin-bottom: 5px;
}

.confirm-to-upload {
  margin-top: 10px;
  height: 40px;
  width: 40%;
  margin-left: 30%;
  text-align: center;
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 30px;
  border-radius: 5px;
  background-color: bisque;
  box-shadow: 0px 0px 1px 1px gray;
}